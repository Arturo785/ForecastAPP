<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="Weather Location">
        <SwitchPreference
            android:key="USE_DEVICE_LOCATION"
            android:title="@string/device_location"
            android:summary="@string/summary_location"
            android:defaultValue="false"
            android:disableDependentsState="true">
        </SwitchPreference>
<!--if the use device location is disabled also the edit text because of the  dependency-->
        <EditTextPreference
            android:key="CUSTOM_LOCATION"
            android:title="Location"
            android:summary="The location where the weather is taken from"
            android:defaultValue="Sayula"
            android:dependency="USE_DEVICE_LOCATION">
        </EditTextPreference>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Units">
        <ListPreference
            android:key="UNIT_SYSTEM"
            android:title="Unit system"
            android:summary="%s"
            android:defaultValue="METRIC"
            android:entries="@array/unitSystemEntries"
            android:entryValues="@array/unitSystemValues"/>
    </PreferenceCategory>

</PreferenceScreen>